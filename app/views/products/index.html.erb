<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Goal price</th>
      <th>Current price</th>
      <th>Due date</th>
      <th>State</th>
      <th>いいね</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.goal_price %></td>
        <td><%= product.get_current_price %></td>
        <td><%= product.due_date %></td>
        <td><%= product.state %></td>
        <td><%= product.likes.count %></td>
        <td><%= link_to 'Show', product %></td>
        <% if user_signed_in? && !(product.is_owned_by?(current_user.id)) %>
          <% if current_user.already_liked?(product) %>
            <td><%= render 'unlike', product: product %></td>
          <% else %>
            <td><%= render 'like', product: product %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
