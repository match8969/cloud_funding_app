<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-11 heading">
      <h1>Messages</h1>
    </div>
    <%= link_to 'New Message', new_message_path, class: "col-md-1 link__new" %>
  </div>
</div>

<table class="table">
  <thead class="table__header">
    <tr>
      <th>Content</th>
      <th>From user</th>
      <th>Message group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table__body">
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= User.find(message.from_user_id).email %></td>
        <td><%= message.message_group.id %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @messages %>
<br>
