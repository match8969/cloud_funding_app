<p id="notice"><%= notice %></p>

<h1>Select Report Period</h1>
<%= render 'report_form' %>


<h1>Investments Report</h1>

<table>
  <thead>
  <tr>
    <th>Investor Name</th>
    <th>Product Title</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @investments.each do |investment| %>
    <tr>
      <td><%= investment.user.name %></td>
      <td><%= investment.product.title %></td>
      <td><%= investment.price %></td>
      <td><%= link_to 'Show', investment %></td>
      <td><%= link_to 'Edit', edit_investment_path(investment) %></td>
      <td><%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>