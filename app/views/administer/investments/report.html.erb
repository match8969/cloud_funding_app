<p id="notice"><%= notice %></p>

<h1>Select Report Period</h1>
<%= render 'report_form' %>


<h1>Investments Report</h1>

<h2>Seach Period</h2>
<p><%= "#{@investment_report_service.begin_datetime.strftime('%Y年%m月%d日')} ~ #{@investment_report_service.end_datetime.strftime('%Y年%m月%d日')}" %></p>

<table>
  <thead>
  <tr>
    <th>Investor Name</th>
    <th>Product Title</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @investments.each do |investment| %>
    <tr>
      <td><%= investment.user.name %></td>
      <td><%= investment.product.title %></td>
      <td><%= investment.price %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h1>Achieved Products</h1>

<table>
  <thead>
  <tr>
    <th>Product Title</th>
    <th>Owner User Name</th>
    <th>Goal Price</th>
    <th>Achieved Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.user.name %></td>
      <td><%= product.goal_price %></td>
      <td><%= product.investments.last.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>