<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-11 heading"><h1>Categories</h1></div>
    <%= link_to 'New Category', new_administer_category_path, class: "col-md-1 link__new" %>
  </div>
</div>

<table class="table">
  <thead class="table__header">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', administer_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_administer_category_path(category) %></td>
        <td><%= link_to 'Destroy', [:administer, category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @categories %>
<br>

