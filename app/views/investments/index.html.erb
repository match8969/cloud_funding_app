<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-11 heading">
      <h1>Investments</h1>
    </div>
    <%= link_to 'New Investment', new_investment_path, class: "col-md-1 link__new"%>
  </div>
</div>

<table class="table">
  <thead class="table__header">
    <tr>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table__body">
    <% @investments.each do |investment| %>
      <tr>
        <td><%= investment.price %></td>
        <td><%= link_to 'Show', investment %></td>
        <td><%= link_to 'Edit', edit_investment_path(investment) %></td>
        <td><%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @investments %>
<br>
