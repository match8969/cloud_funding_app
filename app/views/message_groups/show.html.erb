<p id="notice"><%= notice %></p>

<p>
   <strong>Talking With :</strong>
    <% @message_group.users.each do |user| %>
      <%= user.email unless user == current_user %>
    <% end %>
</p>

<p>
  <strong>Messages:</strong>
  <% @message_group.messages.each do |message| %>
    <p>
      <%= message.content %>
      [From: <%= @message_group.users.find(message.from_user_id).email %>]
      <%= link_to 'Show', message %>
      <%= link_to 'Edit', edit_message_path(message) %>
      <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>
</p>

<%= render '/messages/form', message: @message %>


<%= link_to 'Edit', edit_message_group_path(@message_group) %> |
<%= link_to 'Back', message_groups_path %>
