<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-11 heading">
      <h1>Message Groups</h1>
    </div>
    <%= link_to 'New Message Group', new_message_group_path, class: "col-md-1 link__new" %>
  </div>
</div>

<table class="table">
  <thead class="table__header">
    <tr>
      <th>Id</th>
      <th>User emails</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table__body">
    <% @message_groups.each do |message_group|  %>
      <tr>
        <td><%= message_group.id %></td>
        <td>
          <% message_group.users.each do |user| %>
            <%= user.email %>
          <% end %>
        </td>
        <td><%= link_to 'Show', message_group %></td>
        <td><%= link_to 'Edit', edit_message_group_path(message_group) %></td>
        <td><%= link_to 'Destroy', message_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @message_groups %>
<br>

